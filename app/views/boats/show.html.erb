<div class="container">
  <div class="row">
    <div class="col-8">
      <div class="card" style="width: 40vw);">
        <img class="card-img-top" src="<%= @boat.photo_url %>"
          alt="Card image cap">
        <div class="card-body">
          <h5 class="card-title"><%= @boat.title %></h5>
          <p class="card-text"><%= @boat.description %></p>
          <p class="card-text"><%= @boat.address %></p>
          <p class="card-text"><%= @boat.price %></p>
          <% if policy(@boat).edit? %>
          <%= link_to "Modifier", edit_boat_path(@boat) %>
          <%= link_to "Supprimer", boat_path(@boat), data: {turbo_method: :delete, turbo_confirm: "Etes-vous sÃ»r ?"} %>
          <% else %>
          <a href="#" class="btn btn-primary">Louer</a>
          <% end %>
        </div>
      </div>
    </div>
    <div class="col-4">

<%=  simple_form_for [@boat, @booking], html: { data: { controller: "flatpicker", flatpicker_dates_value: @booked_dates }} do |f| %>
  <p>Prix de la location par jour: <span data-flatpicker-target="price"><%= @boat.price %> </span>$</p> <br>
  <label for="">Reservation</label>
  <input type="text" class="datepicker" data-action="input->flatpicker#fill_input" data-flatpicker-target="dates">
  <%= f.input :start_date, as: :string, wrapper_html: { class: "datepicker d-none" }, input_html: { data: {flatpicker_target: "start_date"}} %>
  <%= f.input :end_date, as: :string, label: "fin de la reservation", wrapper_html: { class: "datepicker d-none" }, input_html: { data: {flatpicker_target: "end_date"}} %>
  <p class="d-none" data-flatpicker-target="text">Prix total de la location:<span data-flatpicker-target="totalprice"></span>$</p>
  <%= f.input :price, wrapper_html: { class: "d-none" }, input_html: {  data: { flatpicker_target: "bookprice" } } %>
<%= f.button :submit, class: "btn-primary"  %>


  <% end %>
    </div>


  </div>
</div>

</div>
</div>
